// A simple component that can be rendered to the console.
use draw;

component MyButton {
    text: "Hello Orion!";

    function render() {
        // Draw a box and place the text inside it.
        draw.box(0, 0, 18, 3);
        draw.text(2, 1, this.text);
    }
}

// The Orion VM's runner will look for a global instance named 'App'
// after the script finishes and call its render() method if it exists.
var App = MyButton();
