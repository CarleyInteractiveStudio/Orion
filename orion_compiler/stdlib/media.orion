// Orion Standard Media Library
// Version 0.1
module media;

use draw;

// A component for displaying images.
component Image {
    src: ""; // Path or URL to the image
    x: 0;
    y: 0;
    width: 100;
    height: 100;

    function render() {
        draw.image({
            "src": this.src,
            "x": this.x,
            "y": this.y,
            "width": this.width,
            "height": this.height
        });
    }
}
